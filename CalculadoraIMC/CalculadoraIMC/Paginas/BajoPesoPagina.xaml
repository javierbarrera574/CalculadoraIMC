<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC.Paginas.BajoPesoPagina">
    <StackLayout>
        <Image Source="BajoPeso.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
       Aspect="AspectFit" />

        <Label x:Name="lblBajoPeso" Text="Come más, maldito insecto" TextColor="Red" HorizontalOptions="Center" VerticalOptions="Center" 
       FontSize="24" />

        <Button Text="Volver" Clicked="OnBackToMainPageClicked" HorizontalOptions="Center" VerticalOptions="Center" />
    </StackLayout>
</ContentPage>